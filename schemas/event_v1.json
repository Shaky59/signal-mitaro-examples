{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Mitaro Event v1",
  "type": "object",
  "required": [
    "v",
    "device_id",
    "ts_ms",
    "src",
    "ch",
    "edge",
    "level",
    "pulse_ms",
    "vin_class",
    "meta"
  ],
  "properties": {
    "v": {
      "type": "integer",
      "const": 1
    },
    "device_id": {
      "type": "string"
    },
    "ts_ms": {
      "type": "integer"
    },
    "src": {
      "type": "string",
      "enum": ["gpio"]
    },
    "ch": {
      "type": "integer",
      "minimum": 0
    },
    "edge": {
      "type": "string",
      "enum": ["rise", "fall"]
    },
    "level": {
      "type": "integer",
      "enum": [0, 1]
    },
    "pulse_ms": {
      "type": "integer",
      "minimum": 0
    },
    "vin_class": {
      "type": "string"
    },
    "meta": {
      "type": "object",
      "required": ["fw", "board"],
      "properties": {
        "fw": { "type": "string" },
        "board": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
